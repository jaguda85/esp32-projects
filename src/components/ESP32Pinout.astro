---
interface PinConnection {
  pin: string;
  connection: string;
}

interface Props {
  leftPins?: PinConnection[];
  rightPins?: PinConnection[];
}

const { leftPins = [], rightPins = [] } = Astro.props;

// Funkcja pomocnicza do znalezienia poÅ‚Ä…czenia dla pinu
const getConnection = (pins: PinConnection[], pinName: string) => {
  const found = pins.find(p => p.pin === pinName);
  return found ? found.connection : '';
};

// Definicja pinÃ³w ESP32-38 (DevKit v1)
const leftSidePins = [
  'EN', '36 (VP)', '39 (VN)', '34', '35', '32', '33', '25', '26', '27',
  '14', '12', 'GND', '13', '9', '10', '11', '6', '7', '8'
];

const rightSidePins = [
  '3V3', 'GND', '15', '2', '0', '4', '16', '17', '5', '18',
  '19', '21', 'RX', 'TX', '22', '23', 'GND', '3V3', '5V', 'CMD'
];
---

<div class="esp32-pinout">
  <h3>ðŸ”Œ Schemat poÅ‚Ä…czeÅ„ ESP32</h3>
  
  <div class="pinout-container">
    <!-- Lewa strona -->
    <div class="pins-left">
      {leftSidePins.map((pin, index) => (
        <div class="pin-row">
          <div class="pin-connection left">
            {getConnection(leftPins, pin.split(' ')[0]) || 
             getConnection(leftPins, pin.replace(/\s*\(.*?\)\s*/g, '')) || 
             'â€”'}
          </div>
          <div class={`pin-label ${pin.includes('GND') ? 'ground' : pin.includes('3V3') || pin.includes('5V') ? 'power' : ''}`}>
            {pin}
          </div>
          <div class="pin-circle"></div>
        </div>
      ))}
    </div>

    <!-- Åšrodek - chip -->
    <div class="chip">
      <div class="chip-label">ESP32</div>
      <div class="chip-sublabel">DevKit v1</div>
      <div class="chip-icon">ðŸ“¡</div>
    </div>

    <!-- Prawa strona -->
    <div class="pins-right">
      {rightSidePins.map((pin, index) => (
        <div class="pin-row">
          <div class="pin-circle"></div>
          <div class={`pin-label ${pin.includes('GND') ? 'ground' : pin.includes('3V3') || pin.includes('5V') ? 'power' : ''}`}>
            {pin}
          </div>
          <div class="pin-connection right">
            {getConnection(rightPins, pin.split(' ')[0]) || 
             getConnection(rightPins, pin) || 
             'â€”'}
          </div>
        </div>
      ))}
    </div>
  </div>

  <div class="legend">
    <div class="legend-item">
      <span class="legend-color ground"></span> GND (Masa)
    </div>
    <div class="legend-item">
      <span class="legend-color power"></span> Zasilanie
    </div>
    <div class="legend-item">
      <span class="legend-color gpio"></span> GPIO (Piny I/O)
    </div>
  </div>
</div>

<style>
