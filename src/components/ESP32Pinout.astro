---
interface PinConnection {
  pin: string;
  connection: string;
}

interface Props {
  leftPins?: PinConnection[];
  rightPins?: PinConnection[];
  boardType?: 'esp32' | 'esp32s6' | 'c3supermini' | 'bw16';
}

const { leftPins = [], rightPins = [], boardType = 'esp32' } = Astro.props;

// Funkcja pomocnicza do znalezienia poÅ‚Ä…czenia dla pinu
const getConnection = (pins: PinConnection[], pinName: string) => {
  const found = pins.find(p => p.pin === pinName);
  return found ? found.connection : '';
};

// Definicje pinÃ³w dla rÃ³Å¼nych pÅ‚ytek
const boardConfigs = {
  esp32: {
    name: 'ESP32',
    subtitle: 'DevKit v1',
    icon: 'ðŸ“¡',
    leftPins: [
      '3V3', 'EN', '36 (VP)', '39 (VN)', '34', '35', '32', '33', '25', '26',
      '27', '14', '12', 'GND', '13', '2', '3', 'CMD', '5V'
    ],
    rightPins: [
      'GND', '23', '22', 'TX', 'RX', '21', 'GND', '19', '18', '5',
      '17', '16', '4', '0', '2', '15', 'SD0', 'SD1', 'CLK'
    ]
  },
  esp32s6: {
    name: 'ESP32-S6',
    subtitle: '38 PIN',
    icon: 'ðŸ“¡',
    leftPins: [
      '3.3V', '3.3V', 'RST', '4', '5', '6', '7', '15', '16', '17', '18', '8',
      '3', '46', '9', '10', '11', '12', '13', '14', '5V', 'GND'
    ],
    rightPins: [
      'GND', 'TX', 'RX', '1', '2', '42', '41', '40', '39', '38', '37', '36',
      '35', '0', '45', '48', '47', '21', '20', '19', 'GND', 'GND'
    ]
  },
  c3supermini: {
    name: 'ESP32-C3',
    subtitle: 'Super Mini',
    icon: 'ðŸ”·',
    leftPins: ['5', '6', '7', '8', '9', '10', '20', '21'],
    rightPins: ['5V', 'GND', '3V3', '4', '3', '2', '1', '0']
  },
  bw16: {
    name: 'BW16',
    subtitle: 'RTL8720DN',
    icon: 'ðŸ“»',
    leftPins: ['GND', 'PA30', 'PA27', 'PA25', 'PA26', 'PA8', 'PA7', 'EN', 'GND', '3V3', '5V'],
    rightPins: ['GND', 'PA15', 'PA14', 'PA13', 'PA12', 'PA3', 'PA2', 'PA1', 'GND', '3V3', '5V']
  }
};

const config = boardConfigs[boardType];
const leftSidePins = config.leftPins;
const rightSidePins = config.rightPins;
---

<div class="esp32-pinout">
  <h3>ðŸ”Œ Schemat poÅ‚Ä…czeÅ„ {config.name}</h3>
  
  <div class="pinout-container">
    <!-- Lewa strona -->
    <div class="pins-left">
      {leftSidePins.map((pin) => (
        <div class="pin-row">
          <div class="pin-connection left">
            {getConnection(leftPins, pin.split(' ')[0]) || 
             getConnection(leftPins, pin.replace(/\s*\(.*?\)\s*/g, '')) || 
             'â€”'}
          </div>
          <div class={`pin-label ${pin.includes('GND') ? 'ground' : pin.includes('3V3') || pin.includes('3.3V') || pin.includes('5V') ? 'power' : ''}`}>
            {pin}
          </div>
          <div class="pin-circle"></div>
        </div>
      ))}
    </div>

    <!-- Åšrodek - chip -->
    <div class="chip">
      <div class="chip-label">{config.name}</div>
      <div class="chip-sublabel">{config.subtitle}</div>
      <div class="chip-icon">{config.icon}</div>
    </div>

    <!-- Prawa strona -->
    <div class="pins-right">
      {rightSidePins.map((pin) => (
        <div class="pin-row">
          <div class="pin-circle"></div>
          <div class={`pin-label ${pin.includes('GND') ? 'ground' : pin.includes('3V3') || pin.includes('3.3V') || pin.includes('5V') ? 'power' : ''}`}>
            {pin}
          </div>
          <div class="pin-connection right">
            {getConnection(rightPins, pin.split(' ')[0]) || 
             getConnection(rightPins, pin) || 
             'â€”'}
          </div>
        </div>
      ))}
    </div>
  </div>

  <div class="legend">
    <div class="legend-item">
      <span class="legend-color ground"></span> GND (Masa)
    </div>
    <div class="legend-item">
      <span class="legend-color power"></span> Zasilanie
    </div>
    <div class="legend-item">
      <span class="legend-color gpio"></span> GPIO (Piny I/O)
    </div>
  </div>
</div>

<style>
  .esp32-pinout {
    margin: 25px 0;
    background: linear-gradient(135deg, #1e293b 0%, #334155 100%);
    padding: 20px;
    border-radius: 10px;
    border: 2px solid var(--border);
  }

  .esp32-pinout h3 {
    text-align: center;
    color: var(--primary);
    margin-bottom: 20px;
    font-size: 1.3rem;
  }

  .pinout-container {
    display: flex;
    justify-content: center;
    align-items: stretch;
    gap: 15px;
    margin: 15px 0;
    font-family: 'Courier New', monospace;
    font-size: 0.8rem;
  }

  .pins-left, .pins-right {
    display: flex;
    flex-direction: column;
    gap: 6px;
  }

  .pin-row {
    display: flex;
    align-items: center;
    gap: 6px;
    min-height: 24px;
  }

  .pin-label {
    background: var(--card-bg);
    padding: 3px 10px;
    border-radius: 4px;
    font-weight: 600;
    min-width: 70px;
    text-align: center;
    font-size: 0.75rem;
    border: 2px solid var(--border);
    color: var(--text);
  }

  .pin-label.ground {
    background: #0f172a;
    color: #ef4444;
    border-color: #991b1b;
  }

  .pin-label.power {
    background: #7f1d1d;
    color: #fca5a5;
    border-color: #991b1b;
  }

  .pin-circle {
    width: 10px;
    height: 10px;
    border-radius: 50%;
    background: #4a5568;
    border: 2px solid #2d3748;
  }

  .pin-connection {
    background: var(--dark-secondary);
    padding: 3px 10px;
    border-radius: 4px;
    min-width: 130px;
    font-size: 0.75rem;
    border: 2px solid var(--border);
    color: var(--text-light);
  }

  .pin-connection.left {
    text-align: right;
  }

  .pin-connection.right {
    text-align: left;
  }

  .pin-connection:not(:empty) {
    background: #064e3b;
    border-color: #10b981;
    font-weight: 600;
    color: #6ee7b7;
  }

  .chip {
    background: linear-gradient(135deg, #0f172a 0%, #1e293b 100%);
    color: white;
    padding: 20px 15px;
    border-radius: 8px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    min-width: 100px;
    border: 3px solid var(--primary);
    box-shadow: 0 4px 12px rgba(74, 158, 255, 0.3);
  }

  .chip-label {
    font-size: 1.3rem;
    font-weight: bold;
    margin-bottom: 4px;
    color: var(--primary);
  }

  .chip-sublabel {
    font-size: 0.7rem;
    opacity: 0.8;
    margin-bottom: 12px;
  }

  .chip-icon {
    font-size: 1.6rem;
  }

  .legend {
    display: flex;
    justify-content: center;
    gap: 20px;
    margin-top: 20px;
    padding-top: 15px;
    border-top: 2px solid var(--border);
  }

  .legend-item {
    display: flex;
    align-items: center;
    gap: 6px;
    font-size: 0.8rem;
    color: var(--text-light);
  }

  .legend-color {
    width: 16px;
    height: 16px;
    border-radius: 4px;
    border: 2px solid #cbd5e0;
  }

  .legend-color.ground {
    background: #0f172a;
    border-color: #991b1b;
  }

  .legend-color.power {
    background: #7f1d1d;
  }

  .legend-color.gpio {
    background: var(--card-bg);
  }

  @media (max-width: 1024px) {
    .pinout-container {
      flex-direction: column;
      align-items: center;
    }

    .chip {
      order: -1;
      margin-bottom: 15px;
    }

    .pin-connection {
      min-width: 100px;
    }
  }
</style>
