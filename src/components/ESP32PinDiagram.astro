---
interface Pin {
  number: string;
  name: string;
  connection?: string;
}

interface Props {
  leftPins: Pin[];
  rightPins: Pin[];
}

const { leftPins, rightPins } = Astro.props;
---

<div class="pin-diagram">
  <h3>ðŸ”Œ Schemat poÅ‚Ä…czeÅ„ ESP32 (38 pinÃ³w)</h3>
  
  <div class="esp32-board">
    <!-- Lewa strona -->
    <div class="pins-left">
      {leftPins.map((pin) => (
        <div class="pin-row">
          <span class="pin-number">{pin.number}</span>
          <span class="pin-name">{pin.name}</span>
          <span class="connection" class:list={[{ empty: !pin.connection }]}>
            {pin.connection || 'â€”'}
          </span>
        </div>
      ))}
    </div>

    <!-- Åšrodek - ESP32 -->
    <div class="board-center">
      <div class="esp32-label">ESP32</div>
      <div class="esp32-chip">DevKit V1</div>
      <div class="usb-port">USB</div>
    </div>

    <!-- Prawa strona -->
    <div class="pins-right">
      {rightPins.map((pin) => (
        <div class="pin-row">
          <span class="connection" class:list={[{ empty: !pin.connection }]}>
            {pin.connection || 'â€”'}
          </span>
          <span class="pin-name">{pin.name}</span>
          <span class="pin-number">{pin.number}</span>
        </div>
      ))}
    </div>
  </div>

  <div class="legend">
    <span class="legend-item">
      <span class="dot connected"></span> PodÅ‚Ä…czony
    </span>
    <span class="legend-item">
      <span class="dot empty"></span> Wolny
    </span>
  </div>
</div>

<style>
  .pin-diagram {
    margin: 30px 0;
    background: #f8f9fa;
    padding: 30px;
    border-radius: 15px;
  }

  .pin-diagram h3 {
    text-align: center;
    color: #667eea;
    margin-bottom: 25px;
  }

  .esp32-board {
    display: grid;
    grid-template-columns: 1fr auto 1fr;
    gap: 20px;
    max-width: 900px;
    margin: 0 auto;
  }

  /* Lewa i prawa strona */
  .pins-left,
  .pins-right {
    display: flex;
    flex-direction: column;
    gap: 8px;
  }

  .pin-row {
    display: grid;
    grid-template-columns: 40px 80px 1fr;
    align-items: center;
    gap: 10px;
    font-size: 14px;
  }

  .pins-right .pin-row {
    grid-template-columns: 1fr 80px 40px;
    text-align: right;
  }

  .pin-number {
    background: #667eea;
    color: white;
    padding: 5px 8px;
    border-radius: 5px;
    font-weight: bold;
    text-align: center;
    font-size: 12px;
  }

  .pin-name {
    font-family: 'Courier New', monospace;
    font-weight: bold;
    color: #333;
    font-size: 13px;
  }

  .connection {
    background: #28a745;
    color: white;
    padding: 6px 12px;
    border-radius: 20px;
    font-size: 12px;
    font-weight: 500;
    text-align: center;
  }

  .connection.empty {
    background: #e9ecef;
    color: #999;
  }

  /* Åšrodek - pÅ‚ytka ESP32 */
  .board-center {
    background: linear-gradient(135deg, #1e3c72 0%, #2a5298 100%);
    border-radius: 10px;
    padding: 20px;
    min-width: 150px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    box-shadow: 0 5px 15px rgba(0,0,0,0.3);
    position: relative;
  }

  .esp32-label {
    color: white;
    font-weight: bold;
    font-size: 24px;
    margin-bottom: 10px;
  }

  .esp32-chip {
    color: #ffd700;
    font-size: 14px;
    margin-bottom: 15px;
  }

  .usb-port {
    position: absolute;
    bottom: 10px;
    background: #555;
    color: white;
    padding: 5px 15px;
    border-radius: 5px;
    font-size: 11px;
  }

  /* Legenda */
  .legend {
    display: flex;
    justify-content: center;
    gap: 30px;
    margin-top: 25px;
    padding-top: 20px;
    border-top: 2px solid #dee2e6;
  }

  .legend-item {
    display: flex;
    align-items: center;
    gap: 8px;
    font-size: 14px;
    color: #666;
  }

  .dot {
    width: 12px;
    height: 12px;
    border-radius: 50%;
  }

  .dot.connected {
    background: #28a745;
  }

  .dot.empty {
    background: #e9ecef;
  }

  /* ResponsywnoÅ›Ä‡ */
  @media (max-width: 768px) {
    .esp32-board {
      grid-template-columns: 1fr;
      gap: 30px;
    }

    .board-center {
      order: -1;
    }

    .pins-right .pin-row {
      grid-template-columns: 40px 80px 1fr;
      text-align: left;
    }
  }
</style>