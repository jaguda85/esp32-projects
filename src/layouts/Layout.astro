---
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
}

const { title, description = 'Moje projekty z ESP32' } = Astro.props;

// POPRAWIONA FUNKCJA
const getAssetPath = (path: string) => {
  const base = import.meta.env.BASE_URL || '/';
  const baseWithSlash = base.endsWith('/') ? base : `${base}/`;
  return `${baseWithSlash}${path}`;
};
---

<!DOCTYPE html>
<html lang="pl">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content={description}>
  <title>{title}</title>
  <link rel="icon" type="image/svg+xml" href="/favicon.svg">
</head>
<body>
  <header>
    <div class="container">
      <div class="header-content">
        <img 
          src={getAssetPath('images/esp32-logo.png')}
          alt="ESP32" 
          class="esp32-logo"
          onerror="this.style.display='none'"
        />
        <div class="header-text">
          <h1>üîß Moje projekty ESP32</h1>
          <p>Zbi√≥r moich projekt√≥w IoT i elektroniki</p>
        </div>
      </div>
    </div>
  </header>
  
  <main class="container">
    <slot />
  </main>
  
  <footer>
    <p>&copy; {new Date().getFullYear()} - Wszystkie prawa zastrze≈ºone</p>
  </footer>
</body>
</html>