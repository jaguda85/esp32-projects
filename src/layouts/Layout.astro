---
import '../styles/global.css';
import Navigation from '../components/navigation/Navigation.astro';

interface Props {
  title: string;
  description?: string;
  showHeader?: boolean;
}

const { title, description = 'Moje projekty z ESP32', showHeader = true } = Astro.props;

const getAssetPath = (path: string) => {
  const base = import.meta.env.BASE_URL || '/';
  const baseWithSlash = base.endsWith('/') ? base : `${base}/`;
  return `${baseWithSlash}${path}`;
};
---

<!DOCTYPE html>
<html lang="pl">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content={description}>
  <meta name="author" content="Jaguda">
  <meta property="og:title" content={title}>
  <meta property="og:description" content={description}>
  <meta property="og:type" content="website">
  <title>{title}</title>
  <link rel="icon" type="image/svg+xml" href="/favicon.svg">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700;800;900&display=swap" rel="stylesheet">
</head>
<body>
  <!-- NAWIGACJA -->
  <Navigation />

  <!-- HEADER (opcjonalny - dla strony gÅ‚Ã³wnej) -->
  {showHeader && (
    <header>
      <div class="container">
        <div class="header-content">
          <img 
            src={getAssetPath('images/jaguda-logo1.png')}
            alt="Jaguda" 
            class="jaguda-logo"
            onerror="this.style.display='none'"
          />
          <div class="header-text">
            <h1>ðŸ”¥ ESP32 Projects Hub</h1>
            <p>Innowacyjne rozwiÄ…zania IoT & Elektronika</p>
          </div>
          <img 
            src={getAssetPath('images/esp32-logo.jpg')}
            alt="ESP32" 
            class="esp32-logo-header"
            onerror="this.style.display='none'"
          />
        </div>
      </div>
    </header>
  )}
  
  <!-- GÅÃ“WNA TREÅšÄ† -->
  <main class="container">
    <slot />
  </main>
  
  <!-- FOOTER -->
  <footer>
    <div style="display: flex; justify-content: center; align-items: center; gap: 30px; margin-bottom: 20px; flex-wrap: wrap;">
      <img 
        src={getAssetPath('images/jaguda-logo.png')}
        alt="Jaguda Logo" 
        class="footer-logo"
        onerror="this.style.display='none'"
      />
      <img 
        src={getAssetPath('images/esp32-logo.jpg')}
        alt="ESP32 Logo" 
        class="footer-logo"
        onerror="this.style.display='none'"
      />
    </div>
    <p>&copy; {new Date().getFullYear()} <strong>Jaguda</strong> - All rights reserved</p>
    <p style="margin-top: 10px; font-size: 0.85rem; color: var(--text-muted);">
      Zbudowano z âš¡ uÅ¼ywajÄ…c Astro
    </p>
  </footer>

  <!-- GISCUS COMMENTS SCRIPT (bÄ™dzie w projektach) -->
  <script is:inline>
    // Theme sync dla Giscus
    function syncGiscusTheme() {
      const theme = document.documentElement.getAttribute('data-theme') || 'dark';
      const iframe = document.querySelector('iframe.giscus-frame');
      if (iframe) {
        const giscusTheme = theme === 'dark' ? 'dark' : 'light';
        iframe.contentWindow.postMessage(
          { giscus: { setConfig: { theme: giscusTheme } } },
          'https://giscus.app'
        );
      }
    }

    // Obserwuj zmiany motywu
    const observer = new MutationObserver(() => {
      syncGiscusTheme();
    });

    observer.observe(document.documentElement, {
      attributes: true,
      attributeFilter: ['data-theme']
    });
  </script>
</body>
</html>