---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const projects = (await getCollection('projects')).sort(
  (a, b) => b.data.date.valueOf() - a.data.date.valueOf()
);

const getDifficultyClass = (difficulty: string) => {
  const map: Record<string, string> = {
    '≈Åatwy': 'difficulty-easy',
    '≈öredni': 'difficulty-medium',
    'Trudny': 'difficulty-hard'
  };
  return map[difficulty] || 'difficulty-medium';
};

const getProjectUrl = (slug: string) => {
  const base = import.meta.env.BASE_URL || '/';
  const baseWithSlash = base.endsWith('/') ? base : `${base}/`;
  return `${baseWithSlash}projects/${slug}`;
};

const getAssetPath = (path: string) => {
  const base = import.meta.env.BASE_URL || '/';
  const baseWithSlash = base.endsWith('/') ? base : `${base}/`;
  return `${baseWithSlash}${path}`;
};

// Zlicz projekty dla ka≈ºdej p≈Çytki
const boardCounts = {
  esp32: projects.filter(p => (p.data.boardType || 'esp32') === 'esp32').length,
  esp32s6: projects.filter(p => p.data.boardType === 'esp32s6').length,
  c3supermini: projects.filter(p => p.data.boardType === 'c3supermini').length,
  bw16: projects.filter(p => p.data.boardType === 'bw16').length,
};

const boards = [
  {
    id: 'esp32',
    name: 'ESP32',
    image: getAssetPath('images/esp32.png'),
    count: boardCounts.esp32
  },
  {
    id: 'esp32s6',
    name: 'ESP32-S6',
    image: getAssetPath('images/espS6.png'),
    count: boardCounts.esp32s6
  },
  {
    id: 'c3supermini',
    name: 'C3 Mini',
    image: getAssetPath('images/espC3.png'),
    count: boardCounts.c3supermini
  },
  {
    id: 'bw16',
    name: 'BW16',
    image: getAssetPath('images/bw16.png'),
    count: boardCounts.bw16
  }
];
---

<Layout title="Projekty ESP32" showHeader={true}>
  <!-- SEKCJA PROFILU -->
  <div class="profile-section">
    <div style="position: relative; display: inline-block;">
      <img 
        src={getAssetPath('images/jaguda-logo.png')}
        alt="Jaguda Logo" 
        class="profile-avatar"
      />
      <img 
        src={getAssetPath('images/esp32-logo.jpg')}
        alt="ESP32" 
        class="esp32-badge"
      />
    </div>
    <h1 class="profile-name">Jaguda</h1>
    
    <!-- FILTRY P≈ÅYTEK (ZAMIAST TECH BADGES) -->
    <div class="board-filters">
      {boards.map((board) => (
        <button class="board-filter-btn" data-board={board.id}>
          <img src={board.image} alt={board.name} />
          <span class="board-filter-name">{board.name}</span>
          <span class="board-filter-count">{board.count}</span>
        </button>
      ))}
    </div>
    
    <a href="https://github.com/jaguda85" target="_blank" rel="noopener noreferrer" class="github-link">
      <span class="github-icon">‚ö°</span>
      <span>GitHub Profile</span>
      <span class="github-icon">üöÄ</span>
    </a>
  </div>

  <!-- SEPARATOR -->
  <div style="height: 2px; background: linear-gradient(90deg, transparent, var(--primary), transparent); margin: 50px 0;"></div>

  <!-- NAG≈Å√ìWEK PROJEKT√ìW -->
  <h1 style="text-align: center; background: linear-gradient(135deg, var(--primary), var(--secondary)); -webkit-background-clip: text; -webkit-text-fill-color: transparent; background-clip: text; margin-bottom: 10px; font-weight: 800; font-size: 2rem;">
    ‚ö° Moje Projekty ‚ö°
  </h1>
  <p id="filter-info" style="text-align: center; color: var(--text-light); margin-bottom: 40px; font-size: 1rem;">
    Elektronika ‚Ä¢ IoT ‚Ä¢ ESP32
  </p>
  
  <!-- SIATKA PROJEKT√ìW -->
  <div class="project-grid">
    {projects.map((project) => (
      <a 
        href={getProjectUrl(project.slug)} 
        class="project-card"
        data-board-type={project.data.boardType || 'esp32'}
      >
        <img 
          src={project.data.mainImage} 
          alt={project.data.title}
          loading="lazy"
        />
        <div class="project-card-content">
          <h2>{project.data.title}</h2>
          <p>{project.data.description}</p>
          
          {project.data.difficulty && (
            <p class={`difficulty-badge ${getDifficultyClass(project.data.difficulty)}`} style="margin: 12px 0;">
              {project.data.difficulty}
            </p>
          )}
          
          {project.data.tags && (
            <div class="tags">
              {project.data.tags.map((tag) => (
                <span class="tag">{tag}</span>
              ))}
            </div>
          )}
        </div>
      </a>
    ))}
  </div>
  
  {projects.length === 0 && (
    <div style="text-align: center; padding: 80px 20px; background: var(--bg-card); border-radius: 15px; border: 1px solid var(--border);">
      <p style="color: var(--text-light); font-size: 1.2rem; margin-bottom: 15px;">
        üöÄ Brak projekt√≥w
      </p>
      <p style="color: var(--text-muted); font-size: 0.95rem;">
        Dodaj sw√≥j pierwszy projekt w katalogu <code style="background: var(--code-bg); padding: 3px 8px; border-radius: 5px;">src/content/projects/</code>
      </p>
    </div>
  )}
</Layout>

<script>
  const filterButtons = document.querySelectorAll('.board-filter-btn');
  const projectCards = document.querySelectorAll('.project-card');
  const filterInfo = document.getElementById('filter-info');

  // Stan filtr√≥w (zbi√≥r aktywnych p≈Çytek)
  const activeFilters = new Set<string>();

  function updateProjects() {
    let visibleCount = 0;
    
    projectCards.forEach(project => {
      const projectBoard = project.getAttribute('data-board-type') || 'esp32';
      
      // Je≈õli brak filtr√≥w LUB projekt pasuje do kt√≥rego≈õ z filtr√≥w
      if (activeFilters.size === 0 || activeFilters.has(projectBoard)) {
        project.style.display = '';
        visibleCount++;
        setTimeout(() => {
          project.classList.add('fade-in');
        }, 10);
      } else {
        project.style.display = 'none';
        project.classList.remove('fade-in');
      }
    });
    
    // Zaktualizuj tekst informacyjny
    if (filterInfo) {
      if (activeFilters.size === 0) {
        filterInfo.textContent = `Wszystkie projekty ‚Ä¢ ${visibleCount} ${visibleCount === 1 ? 'projekt' : 'projekt√≥w'}`;
      } else {
        const filterNames = Array.from(activeFilters).join(', ').toUpperCase();
        filterInfo.textContent = `Filtr: ${filterNames} ‚Ä¢ ${visibleCount} ${visibleCount === 1 ? 'projekt' : 'projekt√≥w'}`;
      }
    }
  }

  filterButtons.forEach(btn => {
    btn.addEventListener('click', () => {
      const boardId = btn.getAttribute('data-board');
      
      if (!boardId) return;
      
      // Toggle filtru
      if (activeFilters.has(boardId)) {
        activeFilters.delete(boardId);
        btn.classList.remove('active');
      } else {
        activeFilters.add(boardId);
        btn.classList.add('active');
      }
      
      updateProjects();
    });
  });
</script>

<style>
  /* FILTRY P≈ÅYTEK (ZAMIAST TECH BADGES) */
  .board-filters {
    display: flex;
    justify-content: center;
    gap: 12px;
    margin: 25px 0;
    flex-wrap: wrap;
  }

  .board-filter-btn {
    background: var(--card-bg);
    border: 2px solid var(--border);
    border-radius: 10px;
    padding: 8px 12px;
    cursor: pointer;
    transition: all 0.3s ease;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 6px;
    min-width: 85px;
    position: relative;
    overflow: hidden;
  }

  .board-filter-btn::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(74, 158, 255, 0.1), transparent);
    transition: left 0.5s ease;
  }

  .board-filter-btn:hover::before {
    left: 100%;
  }

  .board-filter-btn img {
    width: 50px;
    height: 50px;
    object-fit: contain;
    filter: drop-shadow(0 2px 4px rgba(0, 0, 0, 0.3));
    transition: transform 0.3s ease;
  }

  .board-filter-btn:hover {
    border-color: var(--primary);
    transform: translateY(-4px);
    box-shadow: 0 6px 20px rgba(74, 158, 255, 0.3);
  }

  .board-filter-btn:hover img {
    transform: scale(1.1);
  }

  .board-filter-btn.active {
    background: linear-gradient(135deg, rgba(74, 158, 255, 0.2), rgba(52, 211, 153, 0.15));
    border-color: var(--primary);
    box-shadow: 0 0 20px rgba(74, 158, 255, 0.5);
  }

  .board-filter-btn.active::after {
    content: '‚úì';
    position: absolute;
    top: 4px;
    right: 4px;
    background: var(--primary);
    color: var(--dark);
    width: 20px;
    height: 20px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: bold;
    font-size: 0.8rem;
  }

  .board-filter-name {
    font-size: 0.75rem;
    font-weight: 600;
    color: var(--text);
    text-align: center;
  }

  .board-filter-btn.active .board-filter-name {
    color: var(--primary);
  }

  .board-filter-count {
    font-size: 0.7rem;
    color: var(--text-light);
    background: var(--dark-secondary);
    padding: 2px 8px;
    border-radius: 10px;
  }

  .board-filter-btn.active .board-filter-count {
    background: var(--primary);
    color: var(--dark);
    font-weight: 600;
  }

  /* ANIMACJA PROJEKT√ìW */
  .project-card {
    opacity: 0;
    transform: scale(0.95);
    animation: fadeInScale 0.4s ease forwards;
  }

  .project-card.fade-in {
    animation: fadeInScale 0.4s ease forwards;
  }

  @keyframes fadeInScale {
    to {
      opacity: 1;
      transform: scale(1);
    }
  }

  @media (max-width: 768px) {
    .board-filters {
      gap: 8px;
    }

    .board-filter-btn {
      min-width: 70px;
      padding: 6px 10px;
    }

    .board-filter-btn img {
      width: 40px;
      height: 40px;
    }

    .board-filter-name {
      font-size: 0.7rem;
    }

    .board-filter-count {
      font-size: 0.65rem;
      padding: 1px 6px;
    }
  }

  @media (max-width: 480px) {
    .board-filter-btn {
      min-width: 65px;
    }

    .board-filter-btn img {
      width: 35px;
      height: 35px;
    }
  }
</style>
