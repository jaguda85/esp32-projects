---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const projects = (await getCollection('projects')).sort(
  (a, b) => b.data.date.valueOf() - a.data.date.valueOf()
);

const getDifficultyClass = (difficulty: string) => {
  const map: Record<string, string> = {
    '≈Åatwy': 'difficulty-easy',
    '≈öredni': 'difficulty-medium',
    'Trudny': 'difficulty-hard'
  };
  return map[difficulty] || 'difficulty-medium';
};

const getProjectUrl = (slug: string) => {
  const base = import.meta.env.BASE_URL || '/';
  const baseWithSlash = base.endsWith('/') ? base : `${base}/`;
  return `${baseWithSlash}projects/${slug}`;
};

const getAssetPath = (path: string) => {
  const base = import.meta.env.BASE_URL || '/';
  const baseWithSlash = base.endsWith('/') ? base : `${base}/`;
  return `${baseWithSlash}${path}`;
};

// Zlicz projekty dla ka≈ºdej p≈Çytki
const boardCounts = {
  esp32: projects.filter(p => (p.data.boardType || 'esp32') === 'esp32').length,
  esp32s6: projects.filter(p => p.data.boardType === 'esp32s6').length,
  c3supermini: projects.filter(p => p.data.boardType === 'c3supermini').length,
  bw16: projects.filter(p => p.data.boardType === 'bw16').length,
};

const boards = [
  {
    id: 'esp32',
    name: 'ESP32 DevKit',
    image: getAssetPath('images/esp32.png'),
    count: boardCounts.esp32
  },
  {
    id: 'esp32s6',
    name: 'ESP32-S6',
    image: getAssetPath('images/espS6.png'),
    count: boardCounts.esp32s6
  },
  {
    id: 'c3supermini',
    name: 'ESP32-C3 SuperMini',
    image: getAssetPath('images/espC3.png'),
    count: boardCounts.c3supermini
  },
  {
    id: 'bw16',
    name: 'BW16 RTL8720DN',
    image: getAssetPath('images/bw16.png'),
    count: boardCounts.bw16
  }
];
---

<Layout title="Projekty ESP32" showHeader={true}>
  <!-- SEKCJA PROFILU -->
  <div class="profile-section">
    <div style="position: relative; display: inline-block;">
      <img 
        src={getAssetPath('images/jaguda-logo.png')}
        alt="Jaguda Logo" 
        class="profile-avatar"
      />
      <img 
        src={getAssetPath('images/esp32-logo.jpg')}
        alt="ESP32" 
        class="esp32-badge"
      />
    </div>
    <h1 class="profile-name">Jaguda</h1>
    
    <!-- TECH STACK BADGES -->
    <div class="tech-badges">
      <div class="tech-badge-item">
        <img src={getAssetPath('images/esp32-logo.jpg')} alt="ESP32" />
        <span>ESP32</span>
      </div>
      <div class="tech-badge-item">
        <span style="font-size: 2rem;">‚ö°</span>
        <span>IoT</span>
      </div>
      <div class="tech-badge-item">
        <span style="font-size: 2rem;">üîß</span>
        <span>Arduino</span>
      </div>
    </div>
    
    <a href="https://github.com/jaguda85" target="_blank" rel="noopener noreferrer" class="github-link">
      <span class="github-icon">‚ö°</span>
      <span>GitHub Profile</span>
      <span class="github-icon">üöÄ</span>
    </a>
  </div>

  <!-- SEPARATOR -->
  <div style="height: 2px; background: linear-gradient(90deg, transparent, var(--primary), transparent); margin: 50px 0;"></div>

  <!-- SELEKTOR P≈ÅYTEK -->
  <div class="board-selector-section">
    <h2 style="text-align: center; color: var(--primary); margin-bottom: 30px; font-size: 1.8rem;">
      üîå Wybierz p≈Çytkƒô
    </h2>
    
    <div class="board-grid">
      <button class="board-card active" data-board="all">
        <div class="board-image-container">
          <span style="font-size: 4rem;">üéØ</span>
        </div>
        <h3>Wszystkie</h3>
        <span class="board-count">{projects.length} projekt√≥w</span>
      </button>
      
      {boards.map((board) => (
        <button class="board-card" data-board={board.id}>
          <div class="board-image-container">
            <img src={board.image} alt={board.name} />
          </div>
          <h3>{board.name}</h3>
          <span class="board-count">{board.count} projekt√≥w</span>
        </button>
      ))}
    </div>
  </div>

  <!-- SEPARATOR -->
  <div style="height: 2px; background: linear-gradient(90deg, transparent, var(--secondary), transparent); margin: 50px 0;"></div>

  <!-- NAG≈Å√ìWEK PROJEKT√ìW -->
  <h1 style="text-align: center; background: linear-gradient(135deg, var(--primary), var(--secondary)); -webkit-background-clip: text; -webkit-text-fill-color: transparent; background-clip: text; margin-bottom: 10px; font-weight: 800; font-size: 2rem;">
    ‚ö° Moje Projekty ‚ö°
  </h1>
  <p id="filter-info" style="text-align: center; color: var(--text-light); margin-bottom: 40px; font-size: 1rem;">
    Elektronika ‚Ä¢ IoT ‚Ä¢ ESP32
  </p>
  
  <!-- SIATKA PROJEKT√ìW -->
  <div class="project-grid">
    {projects.map((project) => (
      <a 
        href={getProjectUrl(project.slug)} 
        class="project-card"
        data-board-type={project.data.boardType || 'esp32'}
      >
        <img 
          src={project.data.mainImage} 
          alt={project.data.title}
          loading="lazy"
        />
        <div class="project-card-content">
          <h2>{project.data.title}</h2>
          <p>{project.data.description}</p>
          
          {project.data.difficulty && (
            <p class={`difficulty-badge ${getDifficultyClass(project.data.difficulty)}`} style="margin: 12px 0;">
              {project.data.difficulty}
            </p>
          )}
          
          {project.data.tags && (
            <div class="tags">
              {project.data.tags.map((tag) => (
                <span class="tag">{tag}</span>
              ))}
            </div>
          )}
        </div>
      </a>
    ))}
  </div>
  
  {projects.length === 0 && (
    <div style="text-align: center; padding: 80px 20px; background: var(--bg-card); border-radius: 15px; border: 1px solid var(--border);">
      <p style="color: var(--text-light); font-size: 1.2rem; margin-bottom: 15px;">
        üöÄ Brak projekt√≥w
      </p>
      <p style="color: var(--text-muted); font-size: 0.95rem;">
        Dodaj sw√≥j pierwszy projekt w katalogu <code style="background: var(--code-bg); padding: 3px 8px; border-radius: 5px;">src/content/projects/</code>
      </p>
    </div>
  )}
</Layout>

<script>
  const boardCards = document.querySelectorAll('.board-card');
  const projectCards = document.querySelectorAll('.project-card');
  const filterInfo = document.getElementById('filter-info');

  const boardNames: Record<string, string> = {
    all: 'Wszystkie projekty',
    esp32: 'Projekty z ESP32 DevKit',
    esp32s6: 'Projekty z ESP32-S6',
    c3supermini: 'Projekty z ESP32-C3 SuperMini',
    bw16: 'Projekty z BW16 RTL8720DN'
  };

  boardCards.forEach(card => {
    card.addEventListener('click', () => {
      const selectedBoard = card.getAttribute('data-board');
      
      // Usu≈Ñ active ze wszystkich
      boardCards.forEach(c => c.classList.remove('active'));
      
      // Dodaj active do klikniƒôtej
      card.classList.add('active');
      
      // Filtruj projekty
      let visibleCount = 0;
      projectCards.forEach(project => {
        const projectBoard = project.getAttribute('data-board-type') || 'esp32';
        
        if (selectedBoard === 'all' || projectBoard === selectedBoard) {
          project.style.display = '';
          visibleCount++;
          // Animacja pojawienia siƒô
          setTimeout(() => {
            project.classList.add('fade-in');
          }, 10);
        } else {
          project.style.display = 'none';
          project.classList.remove('fade-in');
        }
      });
      
      // Zaktualizuj tekst informacyjny
      if (filterInfo && selectedBoard) {
        const boardName = boardNames[selectedBoard] || 'Projekty';
        filterInfo.textContent = `${boardName} ‚Ä¢ ${visibleCount} ${visibleCount === 1 ? 'projekt' : 'projekt√≥w'}`;
      }
      
      // Scroll do projekt√≥w
      const projectGrid = document.querySelector('.project-grid');
      if (projectGrid && selectedBoard !== 'all') {
        setTimeout(() => {
          projectGrid.scrollIntoView({ behavior: 'smooth', block: 'start' });
        }, 100);
      }
    });
  });
</script>

<style>
  /* SELEKTOR P≈ÅYTEK */
  .board-selector-section {
    margin: 40px 0 50px;
    padding: 30px;
    background: linear-gradient(135deg, #1e293b 0%, #334155 100%);
    border-radius: 15px;
    border: 2px solid var(--border);
  }

  .board-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 20px;
    max-width: 1200px;
    margin: 0 auto;
  }

  .board-card {
    background: var(--card-bg);
    border: 3px solid var(--border);
    border-radius: 12px;
    padding: 20px;
    cursor: pointer;
    transition: all 0.3s ease;
    text-align: center;
    position: relative;
    overflow: hidden;
  }

  .board-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(74, 158, 255, 0.1), transparent);
    transition: left 0.5s ease;
  }

  .board-card:hover::before {
    left: 100%;
  }

  .board-card:hover {
    transform: translateY(-8px);
    border-color: var(--primary);
    box-shadow: 0 8px 24px rgba(74, 158, 255, 0.3);
  }

  .board-card.active {
    border-color: var(--primary);
    background: linear-gradient(135deg, rgba(74, 158, 255, 0.15), rgba(52, 211, 153, 0.1));
    box-shadow: 0 0 30px rgba(74, 158, 255, 0.4);
  }

  .board-card.active::after {
    content: '‚úì';
    position: absolute;
    top: 10px;
    right: 10px;
    background: var(--primary);
    color: var(--dark);
    width: 28px;
    height: 28px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: bold;
    font-size: 1.1rem;
  }

  .board-image-container {
    width: 100%;
    height: 150px;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 15px;
    background: var(--dark-secondary);
    border-radius: 8px;
    padding: 15px;
  }

  .board-image-container img {
    max-width: 100%;
    max-height: 100%;
    object-fit: contain;
    filter: drop-shadow(0 4px 8px rgba(0, 0, 0, 0.3));
  }

  .board-card h3 {
    color: var(--text);
    font-size: 1.1rem;
    margin-bottom: 8px;
    font-weight: 600;
  }

  .board-count {
    color: var(--text-light);
    font-size: 0.9rem;
    display: block;
  }

  .board-card.active .board-count {
    color: var(--primary);
    font-weight: 600;
  }

  /* ANIMACJA PROJEKT√ìW */
  .project-card {
    opacity: 0;
    transform: scale(0.9);
    animation: fadeInScale 0.4s ease forwards;
  }

  .project-card.fade-in {
    animation: fadeInScale 0.4s ease forwards;
  }

  @keyframes fadeInScale {
    to {
      opacity: 1;
      transform: scale(1);
    }
  }

  @media (max-width: 768px) {
    .board-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 15px;
    }

    .board-image-container {
      height: 120px;
    }

    .board-card h3 {
      font-size: 0.95rem;
    }

    .board-count {
      font-size: 0.8rem;
    }
  }

  @media (max-width: 480px) {
    .board-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
