---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const projects = await getCollection('projects');
  return projects.map(project => ({
    params: { slug: project.slug },
    props: { project },
  }));
}

const { project } = Astro.props;
const { Content } = await project.render();

const formatDate = (date: Date) => {
  return new Date(date).toLocaleDateString('pl-PL', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
  });
};

const getDifficultyClass = (difficulty: string) => {
  const map: Record<string, string> = {
    '≈Åatwy': 'difficulty-easy',
    '≈öredni': 'difficulty-medium',
    'Trudny': 'difficulty-hard'
  };
  return map[difficulty] || 'difficulty-medium';
};
---

<Layout title={project.data.title} description={project.data.description}>
  <a href="/" class="back-button">‚Üê Powr√≥t do listy projekt√≥w</a>
  
  <article class="project-detail">
    <h1>{project.data.title}</h1>
    
    <div class="project-meta">
      <span>üìÖ {formatDate(project.data.date)}</span>
      {project.data.difficulty && (
        <span class={`difficulty-badge ${getDifficultyClass(project.data.difficulty)}`}>
          üìä {project.data.difficulty}
        </span>
      )}
    </div>
    
    {project.data.tags && (
      <div class="tags" style="margin: 20px 0;">
        {project.data.tags.map((tag) => (
          <span class="tag">{tag}</span>
        ))}
      </div>
    )}
    
    <img 
      src={project.data.mainImage} 
      alt={project.data.title}
      style="width: 100%; border-radius: 12px; margin: 30px 0; border: 1px solid var(--border);"
    />
    
    <div class="content">
      <Content />
    </div>
    
    {project.data.components && project.data.components.length > 0 && (
      <div style="margin: 30px 0;">
        <h2>üîå Potrzebne komponenty:</h2>
        <ul style="margin-left: 20px; line-height: 2;">
          {project.data.components.map((component) => (
            <li>{component}</li>
          ))}
        </ul>
      </div>
    )}
    
    {project.data.images && project.data.images.length > 0 && (
      <div>
        <h2>üì∏ Wiƒôcej zdjƒôƒá:</h2>
        <div class="image-gallery">
          {project.data.images.map((image) => (
            <img src={image} alt={`${project.data.title} - zdjƒôcie`} loading="lazy" />
          ))}
        </div>
      </div>
    )}
  </article>
</Layout>

<style>
  .content {
    margin: 30px 0;
    line-height: 1.8;
  }
  
  .content :global(h2) {
    color: var(--primary);
    margin-top: 35px;
    margin-bottom: 15px;
    border-bottom: 2px solid var(--border);
    padding-bottom: 8px;
  }
  
  .content :global(h3) {
    color: var(--secondary);
    margin-top: 25px;
    margin-bottom: 12px;
    font-weight: 600;
  }
  
  .content :global(p) {
    margin-bottom: 15px;
    color: var(--text);
  }
  
  .content :global(ul), .content :global(ol) {
    margin-left: 25px;
    margin-bottom: 15px;
  }
  
  .content :global(li) {
    margin-bottom: 8px;
    color: var(--text);
  }
  
  .content :global(img) {
    max-width: 100%;
    border-radius: 8px;
    margin: 20px 0;
    border: 1px solid var(--border);
  }
  
  .content :global(a) {
    color: var(--primary);
    text-decoration: none;
    border-bottom: 1px solid var(--primary);
  }
  
  .content :global(a:hover) {
    color: var(--primary-light);
    border-bottom-color: var(--primary-light);
  }
</style>