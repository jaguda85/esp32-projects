  }
  
  .content :global(h3) {
    color: var(--secondary);
    margin-top: 20px;  /* ZMNIEJSZONE z 25px */
    margin-bottom: 10px;  /* ZMNIEJSZONE z 12px */
    font-weight: 600;
    font-size: 1.1rem;  /* DODANE */
  }
  
  .content :global(p) {
    margin-bottom: 12px;  /* ZMNIEJSZONE z 15px */
    color: var(--text);
  }
  
  .content :global(ul), .content :global(ol) {
    margin-left: 20px;  /* ZMNIEJSZONE z 25px */
    margin-bottom: 12px;  /* ZMNIEJSZONE z 15px */
  }
  
