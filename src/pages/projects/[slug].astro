---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';
import ESP32Pinout from '../../components/ESP32Pinout.astro';
import CodeBlock from '../../components/CodeBlock.astro';

export async function getStaticPaths() {
  const projects = await getCollection('projects');
  return projects.map(project => ({
    params: { slug: project.slug },
    props: { project },
  }));
}

const { project } = Astro.props;
const { Content } = await project.render();

const formatDate = (date: Date) => {
  return new Date(date).toLocaleDateString('pl-PL', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
  });
};

const getDifficultyClass = (difficulty: string) => {
  const map: Record<string, string> = {
    '≈Åatwy': 'difficulty-easy',
    '≈öredni': 'difficulty-medium',
    'Trudny': 'difficulty-hard'
  };
  return map[difficulty] || 'difficulty-medium';
};

// POPRAWIONA FUNKCJA - upewnij siƒô ≈ºe base ko≈Ñczy siƒô na /
const getHomeUrl = () => {
  const base = import.meta.env.BASE_URL || '/';
  return base.endsWith('/') ? base : `${base}/`;
};
const homeUrl = getHomeUrl();
---

<Layout title={project.data.title} description={project.data.description}>
  <a href={homeUrl} class="back-button">‚Üê Powr√≥t do listy projekt√≥w</a>
  
  <article class="project-detail">
    <h1>{project.data.title}</h1>
    
    <div class="project-meta">
      <span>üìÖ {formatDate(project.data.date)}</span>
      {project.data.difficulty && (
        <span class={`difficulty-badge ${getDifficultyClass(project.data.difficulty)}`}>
          üìä {project.data.difficulty}
        </span>
      )}
    </div>
    
    {project.data.tags && (
      <div class="tags" style="margin: 20px 0;">
        {project.data.tags.map((tag) => (
          <span class="tag">{tag}</span>
        ))}
      </div>
    )}
    
    <img 
      src={project.data.mainImage} 
      alt={project.data.title}
      class="project-main-image"
    />
    
    {(project.data.leftPins || project.data.rightPins) && (
      <ESP32Pinout 
        leftPins={project.data.leftPins} 
        rightPins={project.data.rightPins} 
      />
    )}
    
    <div class="content">
      <Content />
    </div>
    
    {project.data.arduinoCode && (
      <div>
        <h2>üíª Kod programu Arduino</h2>
        <CodeBlock 
          code={project.data.arduinoCode}
          filename={project.data.arduinoFilename || 'sketch.ino'}
          language="cpp"
        />
      </div>
    )}
    
    {project.data.libraries && project.data.libraries.length > 0 && (
      <div style="margin: 30px 0;">
        <h2>üìö Niezbƒôdne biblioteki Arduino IDE</h2>
        <div class="libraries-list">
          {project.data.libraries.map((library) => (
            <div class="library-item">
              <div class="library-info">
                <span class="library-name">üì¶ {library.name}</span>
                {library.author && (
                  <span class="library-author">by {library.author}</span>
                )}
              </div>
              {library.link && (
                <a href={library.link} target="_blank" rel="noopener noreferrer" class="library-link">
                  üîó Link
                </a>
              )}
            </div>
          ))}
        </div>
        <div class="library-help">
          <p><strong>Jak zainstalowaƒá:</strong></p>
          <ol>
            <li>Otw√≥rz Arduino IDE</li>
            <li>Przejd≈∫ do: <code>Sketch ‚Üí Include Library ‚Üí Manage Libraries...</code></li>
            <li>Wyszukaj nazwƒô biblioteki</li>
            <li>Kliknij "Install"</li>
          </ol>
        </div>
      </div>
    )}
    
    {project.data.components && project.data.components.length > 0 && (
      <div style="margin: 30px 0;">
        <h2>üîå Potrzebne komponenty:</h2>
        <ul style="margin-left: 20px; line-height: 2;">
          {project.data.components.map((component) => (
            <li>{component}</li>
          ))}
        </ul>
      </div>
    )}
    
    {project.data.images && project.data.images.length > 0 && (
      <div>
        <h2>üì∏ Wiƒôcej zdjƒôƒá:</h2>
        <p style="color: var(--text-light); font-size: 0.9rem; margin-bottom: 15px;">
          Kliknij na zdjƒôcie aby powiƒôkszyƒá
        </p>
        <div class="image-gallery">
          {project.data.images.map((image, index) => (
            <img 
              src={image} 
              alt={`${project.data.title} - zdjƒôcie ${index + 1}`} 
              loading="lazy"
              class="gallery-image"
              data-image={image}
            />
          ))}
        </div>
      </div>
    )}
  </article>

  <!-- KOMENTARZE GISCUS -->
  <div class="comments-section">
    <h2 style="color: var(--primary); margin-bottom: 20px; text-align: center;">
      üí¨ Komentarze
    </h2>
    <div class="giscus-container">
      <script 
        src="https://giscus.app/client.js"
        data-repo="jaguda85/esp32-projects"
        data-repo-id="R_kgDOQxp5wg"
        data-category="Comments"
        data-category-id="DIC_kwDOQxp5ws4C0hgC"
        data-mapping="pathname"
        data-strict="0"
        data-reactions-enabled="1"
        data-emit-metadata="0"
        data-input-position="top"
        data-theme="dark"
        data-lang="pl"
        data-loading="lazy"
        crossorigin="anonymous"
        async>
      </script>
    </div>
  </div>
</Layout>

  <div id="lightbox" class="lightbox">
    <span class="lightbox-close">&times;</span>
    <img class="lightbox-content" id="lightbox-image" alt="Powiƒôkszone zdjƒôcie">
  </div>
</Layout>

<script>
  const lightbox = document.getElementById('lightbox');
  const lightboxImg = document.getElementById('lightbox-image') as HTMLImageElement;
  const closeBtn = document.querySelector('.lightbox-close');
  const galleryImages = document.querySelectorAll('.gallery-image');

  galleryImages.forEach(img => {
    img.addEventListener('click', function(this: HTMLImageElement) {
      const imageSrc = this.getAttribute('data-image');
      if (lightbox && lightboxImg && imageSrc) {
        lightboxImg.src = imageSrc;
        lightbox.classList.add('active');
        document.body.style.overflow = 'hidden';
      }
    });
  });

  const closeLightbox = () => {
    if (lightbox) {
      lightbox.classList.remove('active');
      document.body.style.overflow = 'auto';
    }
  };

  closeBtn?.addEventListener('click', closeLightbox);

  lightbox?.addEventListener('click', function(e) {
    if (e.target === lightbox) {
      closeLightbox();
    }
  });

  document.addEventListener('keydown', function(e) {
    if (e.key === 'Escape') {
      closeLightbox();
    }
  });
</script>

<style>
