  }

  .library-help p {
    color: var(--text);
    margin-bottom: 10px;
  }

  .library-help strong {
    color: var(--primary);
  }

  .library-help ol {
    margin-left: 20px;
    color: var(--text-light);
    line-height: 1.8;
  }

  .library-help code {
    background: var(--code-bg);
    color: var(--primary);
    padding: 2px 6px;
    border-radius: 4px;
    font-size: 0.9rem;
  }

  @media (max-width: 768px) {
    .library-item {
      flex-direction: column;
      align-items: flex-start;
      gap: 10px;
    }

    .library-link {
      align-self: stretch;
      text-align: center;
    }
  }

  /* KOMENTARZE */
  .comments-section {
    max-width: 900px;
    margin: 60px auto;
    padding: 30px;
    background: var(--bg-card);
    border-radius: 15px;
    border: 1px solid var(--border);
  }

  .giscus-container {
    margin-top: 20px;
  }

  /* Auto theme switching */
