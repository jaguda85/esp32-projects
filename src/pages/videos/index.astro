---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';
import YouTubeEmbed from '../../components/YouTubeEmbed.astro';

const videos = (await getCollection('videos')).sort(
  (a, b) => b.data.date.valueOf() - a.data.date.valueOf()
);

const getAssetPath = (path: string) => {
  const base = import.meta.env.BASE_URL || '/';
  const baseWithSlash = base.endsWith('/') ? base : `${base}/`;
  return `${baseWithSlash}${path}`;
};

// Grupuj filmy po tagach
const allTags = [...new Set(videos.flatMap(v => v.data.tags || []))];
---

<Layout title="Wideo - Jaguda" description="Moje filmy i tutoriale ESP32" showHeader={false}>
  <div class="videos-page">
    <!-- HEADER -->
    <div class="page-header">
      <div class="header-icon">üé•</div>
      <h1>Moje Filmy YouTube</h1>
      <p>Tutoriale, projekty i eksperymenty z ESP32</p>
    </div>

    <!-- YOUTUBE CHANNEL LINK -->
    <div class="channel-banner">
      <div class="channel-info">
        <div class="channel-icon">üì∫</div>
        <div>
          <h3>JagoDam859</h3>
          <p>Subskrybuj m√≥j kana≈Ç YouTube!</p>
        </div>
      </div>
      <a 
        href="http://www.youtube.com/@JagoDam859" 
        target="_blank" 
        rel="noopener noreferrer"
        class="subscribe-btn"
      >
        <span>üîî</span>
        <span>Subskrybuj</span>
      </a>
    </div>

    <!-- FILTROWANIE PO TAGACH -->
    {allTags.length > 0 && (
      <div class="filter-section">
        <h3>üè∑Ô∏è Filtruj po tematyce:</h3>
        <div class="filter-tags">
          <button class="filter-tag active" data-tag="all">
            Wszystkie ({videos.length})
          </button>
          {allTags.map(tag => {
            const count = videos.filter(v => v.data.tags?.includes(tag)).length;
            return (
              <button class="filter-tag" data-tag={tag}>
                {tag} ({count})
              </button>
            );
          })}
        </div>
      </div>
    )}

    <!-- LISTA FILM√ìW -->
    <div class="videos-grid" id="videosGrid">
      {videos.map((video) => {
        const { Content } = await video.render();
        const tags = video.data.tags?.join(',') || '';
        
        return (
          <div class="video-card" data-tags={tags}>
            <!-- YouTube Embed -->
            <YouTubeEmbed 
              videoId={video.data.youtubeId} 
              title={video.data.title}
            />
            
            <!-- Info -->
            <div class="video-info">
              <h2>{video.data.title}</h2>
              <p class="video-date">
                üìÖ {new Date(video.data.date).toLocaleDateString('pl-PL', {
                  year: 'numeric',
                  month: 'long',
                  day: 'numeric'
                })}
              </p>
              <p class="video-description">{video.data.description}</p>
              
              {video.data.tags && (
                <div class="video-tags">
                  {video.data.tags.map(tag => (
                    <span class="tag">{tag}</span>
                  ))}
                </div>
              )}

              <!-- PowiƒÖzany projekt -->
              {video.data.relatedProject && (
                <a 
                  href={getAssetPath(`projects/${video.data.relatedProject}`)}
                  class="related-project"
                >
                  üîó Zobacz powiƒÖzany projekt
                </a>
              )}

              <!-- Tre≈õƒá markdown -->
              <details class="video-details">
                <summary>üìÑ Wiƒôcej informacji</summary>
                <div class="video-content">
                  <Content />
                </div>
              </details>

              <!-- Link do YouTube -->
              <a 
                href={`https://www.youtube.com/watch?v=${video.data.youtubeId}`}
                target="_blank"
                rel="noopener noreferrer"
                class="watch-on-youtube"
              >
                ‚ñ∂Ô∏è Obejrzyj na YouTube
              </a>
            </div>
          </div>
        );
      })}
    </div>

    {videos.length === 0 && (
      <div class="empty-state">
        <div class="empty-icon">üé¨</div>
        <h2>Brak film√≥w</h2>
        <p>Dodaj sw√≥j pierwszy film w katalogu <code>src/content/videos/</code></p>
      </div>
    )}
  </div>
</Layout>

<script>
  // Filtrowanie film√≥w
  const filterButtons = document.querySelectorAll('.filter-tag');
  const videoCards = document.querySelectorAll('.video-card');

  filterButtons.forEach(button => {
    button.addEventListener('click', () => {
      const selectedTag = button.getAttribute('data-tag');

      // Aktualizuj aktywny przycisk
      filterButtons.forEach(btn => btn.classList.remove('active'));
      button.classList.add('active');

      // Filtruj filmy
      videoCards.forEach(card => {
        const cardTags = card.getAttribute('data-tags');
        
        if (selectedTag === 'all' || cardTags?.includes(selectedTag || '')) {
          card.style.display = 'block';
          card.style.animation = 'fadeInUp 0.5s ease-out';
        } else {
          card.style.display = 'none';
        }
      });
    });
  });
</script>

<style>
  .videos-page {
    max-width: 1200px;
    margin: 0 auto;
    padding: 40px 20px;
  }

  .page-header {
    text-align: center;
    margin-bottom: 50px;
    animation: fadeInUp 0.6s ease-out;
  }

  .header-icon {
    font-size: 4rem;
    margin-bottom: 20px;
    animation: float 3s ease-in-out infinite;
  }

  .page-header h1 {
    font-size: 2.5rem;
    font-weight: 900;
    background: linear-gradient(135deg, var(--primary), var(--secondary));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    margin-bottom: 10px;
  }

  .page-header p {
    font-size: 1.1rem;
    color: var(--text-light);
  }

  .channel-banner {
    background: linear-gradient(135deg, var(--bg-card), var(--bg-hover));
    padding: 25px;
    border-radius: 15px;
    border: 2px solid var(--border);
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 40px;
    animation: fadeInUp 0.7s ease-out;
  }

  .channel-info {
    display: flex;
    align-items: center;
    gap: 20px;
  }

  .channel-icon {
    font-size: 3rem;
  }

  .channel-info h3 {
    color: var(--primary);
    font-size: 1.5rem;
    margin-bottom: 5px;
  }

  .channel-info p {
    color: var(--text-light);
    font-size: 0.95rem;
  }

  .subscribe-btn {
    display: flex;
    align-items: center;
    gap: 10px;
    background: #FF0000;
    color: white;
    padding: 12px 25px;
    border-radius: 50px;
    text-decoration: none;
    font-weight: 700;
    font-size: 1rem;
    transition: all 0.3s ease;
    box-shadow: 0 4px 15px rgba(255, 0, 0, 0.3);
  }

  .subscribe-btn:hover {
    transform: translateY(-3px);
    box-shadow: 0 8px 25px rgba(255, 0, 0, 0.5);
  }

  .filter-section {
    margin-bottom: 40px;
    animation: fadeInUp 0.8s ease-out;
  }

  .filter-section h3 {
    color: var(--primary);
    margin-bottom: 15px;
    font-size: 1.2rem;
  }

  .filter-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 10px;
  }

  .filter-tag {
    background: var(--bg-card);
    color: var(--text-light);
    border: 2px solid var(--border);
    padding: 8px 16px;
    border-radius: 25px;
    font-size: 0.9rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .filter-tag:hover {
    border-color: var(--primary);
    color: var(--primary);
    transform: translateY(-2px);
  }

  .filter-tag.active {
    background: var(--primary);
    color: white;
    border-color: var(--primary);
  }

  .videos-grid {
    display: grid;
    gap: 40px;
  }

  .video-card {
    background: var(--bg-card);
    border-radius: 15px;
    padding: 25px;
    border: 1px solid var(--border);
    animation: fadeInUp 0.6s ease-out;
    transition: all 0.3s ease;
  }

  .video-card:hover {
    border-color: var(--primary);
    box-shadow: 0 10px 40px var(--border-glow);
  }

  .video-info {
    margin-top: 20px;
  }

  .video-info h2 {
    color: var(--text);
    font-size: 1.6rem;
    margin-bottom: 10px;
    font-weight: 700;
  }

  .video-date {
    color: var(--text-muted);
    font-size: 0.9rem;
    margin-bottom: 15px;
  }

  .video-description {
    color: var(--text-light);
    line-height: 1.6;
    margin-bottom: 15px;
  }

  .video-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 8px;
    margin-bottom: 15px;
  }

  .related-project {
    display: inline-block;
    background: linear-gradient(135deg, var(--primary-dark), var(--primary));
    color: white;
    padding: 10px 20px;
    border-radius: 25px;
    text-decoration: none;
    font-weight: 600;
    font-size: 0.9rem;
    margin-bottom: 15px;
    transition: all 0.3s ease;
  }

  .related-project:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 20px var(--border-glow);
  }

  .video-details {
    margin: 20px 0;
    background: var(--bg-secondary);
    border-radius: 10px;
    border: 1px solid var(--border);
  }

  .video-details summary {
    padding: 15px;
    cursor: pointer;
    font-weight: 600;
    color: var(--primary);
    user-select: none;
    transition: all 0.3s ease;
  }

  .video-details summary:hover {
    background: var(--bg-hover);
  }

  .video-details[open] summary {
    border-bottom: 1px solid var(--border);
  }

  .video-content {
    padding: 20px;
    color: var(--text-light);
    line-height: 1.8;
  }

  .video-content :global(h2) {
    color: var(--primary);
    margin-top: 20px;
    margin-bottom: 10px;
  }

  .video-content :global(ul) {
    margin-left: 20px;
    margin-bottom: 15px;
  }

  .video-content :global(a) {
    color: var(--primary);
    text-decoration: none;
    border-bottom: 1px solid var(--primary);
  }

  .watch-on-youtube {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    background: #FF0000;
    color: white;
    padding: 10px 20px;
    border-radius: 25px;
    text-decoration: none;
    font-weight: 600;
    font-size: 0.9rem;
    transition: all 0.3s ease;
    margin-top: 15px;
  }

  .watch-on-youtube:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(255, 0, 0, 0.4);
  }

  .empty-state {
    text-align: center;
    padding: 80px 20px;
    background: var(--bg-card);
    border-radius: 15px;
    border: 1px solid var(--border);
  }

  .empty-icon {
    font-size: 5rem;
    margin-bottom: 20px;
    opacity: 0.5;
  }

  .empty-state h2 {
    color: var(--text-light);
    margin-bottom: 10px;
  }

  .empty-state p {
    color: var(--text-muted);
  }

  .empty-state code {
    background: var(--code-bg);
    padding: 3px 8px;
    border-radius: 5px;
  }

  @media (max-width: 768px) {
    .channel-banner {
      flex-direction: column;
      gap: 20px;
      text-align: center;
    }

    .channel-info {
      flex-direction: column;
    }

    .page-header h1 {
      font-size: 2rem;
    }

    .video-info h2 {
      font-size: 1.3rem;
    }
  }
</style>