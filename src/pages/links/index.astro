---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const links = (await getCollection('links')).sort(
  (a, b) => b.data.date.valueOf() - a.data.date.valueOf()
);

// Grupuj po kategoriach
const categories = [...new Set(links.map(l => l.data.category))];
const allTags = [...new Set(links.flatMap(l => l.data.tags || []))];

// Zlicz linki per kategoria
const linksByCategory = categories.map(cat => ({
  name: cat,
  count: links.filter(l => l.data.category === cat).length,
  links: links.filter(l => l.data.category === cat)
}));

// Ikony dla kategorii
const categoryIcons: Record<string, string> = {
  'Projekt': 'üöÄ',
  'Biblioteka': 'üìö',
  'Tutorial': 'üìñ',
  'Narzƒôdzie': 'üîß',
  'Dokumentacja': 'üìÑ',
  'Inne': 'üîó'
};

const categoryColors: Record<string, string> = {
  'Projekt': 'var(--primary)',
  'Biblioteka': 'var(--secondary)',
  'Tutorial': 'var(--accent-2)',
  'Narzƒôdzie': 'var(--accent)',
  'Dokumentacja': '#f59e0b',
  'Inne': 'var(--text-light)'
};
---

<Layout title="Linki - Jaguda" description="Przydatne linki i zasoby ESP32" showHeader={false}>
  <div class="links-page">
    <!-- HEADER -->
    <div class="page-header">
      <div class="header-icon">üîó</div>
      <h1>Przydatne Linki</h1>
      <p>Moja kolekcja zasob√≥w, narzƒôdzi i inspiracji</p>
    </div>

    <!-- STATS -->
    <div class="stats-banner">
      <div class="stat-item">
        <div class="stat-number">{links.length}</div>
        <div class="stat-label">Link√≥w</div>
      </div>
      <div class="stat-item">
        <div class="stat-number">{categories.length}</div>
        <div class="stat-label">Kategorii</div>
      </div>
      <div class="stat-item">
        <div class="stat-number">{allTags.length}</div>
        <div class="stat-label">Tag√≥w</div>
      </div>
    </div>

    <!-- FILTROWANIE -->
    <div class="filter-section">
      <h3>üìÇ Filtruj po kategorii:</h3>
      <div class="category-filters">
        <button class="category-btn active" data-category="all">
          üåê Wszystkie ({links.length})
        </button>
        {categories.map(cat => {
          const count = links.filter(l => l.data.category === cat).length;
          return (
            <button 
              class="category-btn" 
              data-category={cat}
              style={`--cat-color: ${categoryColors[cat]}`}
            >
              {categoryIcons[cat]} {cat} ({count})
            </button>
          );
        })}
      </div>

      <h3 style="margin-top: 30px;">üè∑Ô∏è Filtruj po tagu:</h3>
      <div class="tag-filters">
        <button class="tag-btn active" data-tag="all">
          Wszystkie
        </button>
        {allTags.map(tag => (
          <button class="tag-btn" data-tag={tag}>
            {tag}
          </button>
        ))}
      </div>
    </div>

    <!-- LINKI -->
    <div class="links-grid" id="linksGrid">
      {links.map(async (link) => {
        const { Content } = await link.render();
        const tags = link.data.tags?.join(',') || '';
        
        return (
          <div 
            class="link-card" 
            data-category={link.data.category}
            data-tags={tags}
          >
            <div class="link-header">
              <div 
                class="link-category"
                style={`background: ${categoryColors[link.data.category]}; color: white;`}
              >
                {categoryIcons[link.data.category]} {link.data.category}
              </div>
              <div class="link-date">
                {new Date(link.data.date).toLocaleDateString('pl-PL', {
                  year: 'numeric',
                  month: 'short',
                  day: 'numeric'
                })}
              </div>
            </div>

            {link.data.image && (
              <div class="link-image">
                <img src={link.data.image} alt={link.data.title} />
              </div>
            )}

            <div class="link-content">
              <h2>{link.data.title}</h2>
              <p class="link-description">{link.data.description}</p>

              {link.data.tags && (
                <div class="link-tags">
                  {link.data.tags.map(tag => (
                    <span class="tag">{tag}</span>
                  ))}
                </div>
              )}

              <details class="link-details">
                <summary>üìÑ Wiƒôcej informacji</summary>
                <div class="link-details-content">
                  <Content />
                </div>
              </details>

              <a 
                href={link.data.url} 
                target="_blank" 
                rel="noopener noreferrer"
                class="visit-link"
              >
                <span>Odwied≈∫</span>
                <span class="arrow">‚Üí</span>
              </a>
            </div>
          </div>
        );
      })}
    </div>

    {links.length === 0 && (
      <div class="empty-state">
        <div class="empty-icon">üîó</div>
        <h2>Brak link√≥w</h2>
        <p>Dodaj sw√≥j pierwszy link w katalogu <code>src/content/links/</code></p>
      </div>
    )}
  </div>
</Layout>

<script>
  // Filtrowanie po kategorii
  const categoryButtons = document.querySelectorAll('.category-btn');
  const tagButtons = document.querySelectorAll('.tag-btn');
  const linkCards = document.querySelectorAll('.link-card');

  let selectedCategory = 'all';
  let selectedTag = 'all';

  function filterLinks() {
    linkCards.forEach(card => {
      const cardCategory = card.getAttribute('data-category');
      const cardTags = card.getAttribute('data-tags');

      const categoryMatch = selectedCategory === 'all' || cardCategory === selectedCategory;
      const tagMatch = selectedTag === 'all' || cardTags?.includes(selectedTag);

      if (categoryMatch && tagMatch) {
        card.style.display = 'block';
        card.style.animation = 'fadeInUp 0.5s ease-out';
      } else {
        card.style.display = 'none';
      }
    });
  }

  categoryButtons.forEach(button => {
    button.addEventListener('click', () => {
      selectedCategory = button.getAttribute('data-category') || 'all';
      
      categoryButtons.forEach(btn => btn.classList.remove('active'));
      button.classList.add('active');
      
      filterLinks();
    });
  });

  tagButtons.forEach(button => {
    button.addEventListener('click', () => {
      selectedTag = button.getAttribute('data-tag') || 'all';
      
      tagButtons.forEach(btn => btn.classList.remove('active'));
      button.classList.add('active');
      
      filterLinks();
    });
  });
</script>

<style>
  .links-page {
    max-width: 1200px;
    margin: 0 auto;
    padding: 40px 20px;
  }

  .page-header {
    text-align: center;
    margin-bottom: 50px;
    animation: fadeInUp 0.6s ease-out;
  }

  .header-icon {
    font-size: 4rem;
    margin-bottom: 20px;
    animation: float 3s ease-in-out infinite;
  }

  .page-header h1 {
    font-size: 2.5rem;
    font-weight: 900;
    background: linear-gradient(135deg, var(--primary), var(--secondary));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    margin-bottom: 10px;
  }

  .page-header p {
    font-size: 1.1rem;
    color: var(--text-light);
  }

  .stats-banner {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
    gap: 20px;
    margin-bottom: 50px;
    animation: fadeInUp 0.7s ease-out;
  }

  .stat-item {
    background: linear-gradient(135deg, var(--bg-card), var(--bg-hover));
    padding: 25px;
    border-radius: 15px;
    border: 1px solid var(--border);
    text-align: center;
    transition: all 0.3s ease;
  }

  .stat-item:hover {
    transform: translateY(-5px);
    border-color: var(--primary);
    box-shadow: 0 10px 30px var(--border-glow);
  }

  .stat-number {
    font-size: 2.5rem;
    font-weight: 900;
    background: linear-gradient(135deg, var(--primary), var(--secondary));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .stat-label {
    color: var(--text-light);
    font-size: 0.9rem;
    font-weight: 600;
    text-transform: uppercase;
    margin-top: 5px;
  }

  .filter-section {
    margin-bottom: 40px;
    animation: fadeInUp 0.8s ease-out;
  }

  .filter-section h3 {
    color: var(--primary);
    margin-bottom: 15px;
    font-size: 1.2rem;
  }

  .category-filters,
  .tag-filters {
    display: flex;
    flex-wrap: wrap;
    gap: 10px;
  }

  .category-btn,
  .tag-btn {
    background: var(--bg-card);
    color: var(--text-light);
    border: 2px solid var(--border);
    padding: 10px 18px;
    border-radius: 25px;
    font-size: 0.9rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .category-btn:hover,
  .tag-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 12px var(--border-glow);
  }

  .category-btn.active {
    background: var(--cat-color, var(--primary));
    color: white;
    border-color: var(--cat-color, var(--primary));
  }

  .tag-btn.active {
    background: var(--primary);
    color: white;
    border-color: var(--primary);
  }

  .links-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
    gap: 30px;
    margin-top: 40px;
  }

  .link-card {
    background: var(--bg-card);
    border-radius: 15px;
    border: 1px solid var(--border);
    overflow: hidden;
    transition: all 0.3s ease;
    animation: fadeInUp 0.6s ease-out;
    display: flex;
    flex-direction: column;
  }

  .link-card:hover {
    transform: translateY(-8px);
    border-color: var(--primary);
    box-shadow: 0 15px 40px var(--border-glow);
  }

  .link-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 15px;
    background: var(--bg-secondary);
    border-bottom: 1px solid var(--border);
  }

  .link-category {
    padding: 6px 12px;
    border-radius: 20px;
    font-size: 0.8rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .link-date {
    color: var(--text-muted);
    font-size: 0.85rem;
  }

  .link-image {
    width: 100%;
    height: 180px;
    overflow: hidden;
    background: var(--bg-secondary);
  }

  .link-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .link-card:hover .link-image img {
    transform: scale(1.1);
  }

  .link-content {
    padding: 20px;
    flex: 1;
    display: flex;
    flex-direction: column;
  }

  .link-content h2 {
    color: var(--text);
    font-size: 1.3rem;
    margin-bottom: 10px;
    font-weight: 700;
  }

  .link-description {
    color: var(--text-light);
    line-height: 1.6;
    margin-bottom: 15px;
    flex: 1;
  }

  .link-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 6px;
    margin-bottom: 15px;
  }

  .link-details {
    background: var(--bg-secondary);
    border-radius: 8px;
    border: 1px solid var(--border);
    margin-bottom: 15px;
  }

  .link-details summary {
    padding: 12px;
    cursor: pointer;
    font-weight: 600;
    color: var(--primary);
    user-select: none;
  }

  .link-details[open] summary {
    border-bottom: 1px solid var(--border);
  }

  .link-details-content {
    padding: 15px;
    color: var(--text-light);
    line-height: 1.8;
    font-size: 0.9rem;
  }

  .link-details-content :global(h2) {
    color: var(--primary);
    font-size: 1.1rem;
    margin: 15px 0 10px 0;
  }

  .link-details-content :global(ul) {
    margin-left: 20px;
    margin-bottom: 10px;
  }

  .link-details-content :global(a) {
    color: var(--primary);
    text-decoration: none;
    border-bottom: 1px solid var(--primary);
  }

  .visit-link {
    display: flex;
    align-items: center;
    justify-content: space-between;
    background: linear-gradient(135deg, var(--primary-dark), var(--primary));
    color: white;
    padding: 12px 20px;
    border-radius: 25px;
    text-decoration: none;
    font-weight: 700;
    font-size: 1rem;
    transition: all 0.3s ease;
    margin-top: auto;
  }

  .visit-link:hover {
    transform: translateX(5px);
    box-shadow: 0 6px 20px var(--border-glow);
  }

  .visit-link .arrow {
    font-size: 1.3rem;
    transition: transform 0.3s ease;
  }

  .visit-link:hover .arrow {
    transform: translateX(5px);
  }

  .empty-state {
    text-align: center;
    padding: 80px 20px;
    background: var(--bg-card);
    border-radius: 15px;
    border: 1px solid var(--border);
  }

  .empty-icon {
    font-size: 5rem;
    margin-bottom: 20px;
    opacity: 0.5;
  }

  .empty-state h2 {
    color: var(--text-light);
    margin-bottom: 10px;
  }

  .empty-state code {
    background: var(--code-bg);
    padding: 3px 8px;
    border-radius: 5px;
  }

  @media (max-width: 768px) {
    .links-grid {
      grid-template-columns: 1fr;
    }

    .page-header h1 {
      font-size: 2rem;
    }

    .stats-banner {
      grid-template-columns: repeat(3, 1fr);
    }
  }
</style>